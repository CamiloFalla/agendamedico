---
import Layout from '../components/Layout.astro';
const appointments = [
  { id: 1, patientName: 'Juan Pérez', date: '2023-10-01', time: '10:00 AM', status: 'Confirmada' },
  { id: 2, patientName: 'María Gómez', date: '2023-10-02', time: '2:00 PM', status: 'Pendiente' },
  // Más citas...
];
---

<Layout title="Agenda">
  <div class="container mx-auto mt-8">
    <h2 class="text-2xl font-semibold text-purple-700 mb-4">Mi Agenda</h2>
    <table class="min-w-full bg-white">
      <thead>
        <tr>
          <th class="py-2">Fecha</th>
          <th class="py-2">Hora</th>
          <th class="py-2">Paciente</th>
          <th class="py-2">Estado</th>
          <th class="py-2">Acciones</th>
        </tr>
      </thead>
      <tbody>
        {appointments.map((appointment) => (
          <tr key={appointment.id}>
            <td class="py-2">{appointment.date}</td>
            <td class="py-2">{appointment.time}</td>
            <td class="py-2">{appointment.patientName}</td>
            <td class="py-2">{appointment.status}</td>
            <td class="py-2">
              {/* Botones para acciones */}
              <a href="#" class="text-blue-500 hover:underline">Ver</a> |{' '}
              <a href="#" class="text-green-500 hover:underline">Confirmar</a> |{' '}
              <a href="#" class="text-red-500 hover:underline">Cancelar</a>
            </td>
          </tr>
        ))}
      </tbody>
    </table>
  </div>
</Layout>
